    <script>
        const API_BASE = 'https://qsub.net';

        const form = document.getElementById('application-form');
        const successMessage = document.getElementById('success-message');
        const fileInput = document.getElementById('resume');
        const fileDisplay = document.getElementById('file-display');
        const fileSelected = document.getElementById('file-selected');
        const fileName = document.getElementById('file-name');
        const uploadWrapper = document.querySelector('.file-upload-wrapper');

        let uploadedFileId = null;

        // File input change handler
        fileInput.addEventListener('change', async (e) => {
            const file = e.target.files[0];
            if (file) {
                await uploadFile(file);
            }
        });

        // Drag and drop handlers
        uploadWrapper.addEventListener('dragover', (e) => {
            e.preventDefault();
            uploadWrapper.classList.add('dragover');
        });

        uploadWrapper.addEventListener('dragleave', () => {
            uploadWrapper.classList.remove('dragover');
        });

        uploadWrapper.addEventListener('drop', async (e) => {
            e.preventDefault();
            uploadWrapper.classList.remove('dragover');
            const file = e.dataTransfer.files[0];
            if (file) {
                await uploadFile(file);
            }
        });

        async function uploadFile(file) {
            // Validate file type
            const allowedTypes = ['.pdf', '.doc', '.docx'];
            const ext = '.' + file.name.split('.').pop().toLowerCase();
            if (!allowedTypes.includes(ext)) {
                alert('Please upload a PDF, DOC, or DOCX file.');
                return;
            }

            // Validate file size (10MB)
            if (file.size > 10 * 1024 * 1024) {
                alert('File size must be less than 10MB.');
                return;
            }

            // Show uploading state
            fileDisplay.style.display = 'none';
            fileSelected.style.display = 'flex';
            fileName.textContent = 'Uploading...';

            const formData = new FormData();
            formData.append('file', file);

            try {
                const response = await fetch(`${API_BASE}/api/upload`, {
                    method: 'POST',
                    body: formData
                });

                if (response.ok) {
                    const result = await response.json();
                    uploadedFileId = result.file_id;
                    fileName.textContent = file.name;
                } else {
                    throw new Error('Upload failed');
                }
            } catch (error) {
                alert('Failed to upload file. Please try again.');
                removeFile();
            }
        }

        window.removeFile = function() {
            uploadedFileId = null;
            fileInput.value = '';
            fileDisplay.style.display = 'block';
            fileSelected.style.display = 'none';
            fileName.textContent = '';
        }

        form.addEventListener('submit', async (e) => {
            e.preventDefault();

            const submitBtn = form.querySelector('.submit-btn');
            submitBtn.disabled = true;
            submitBtn.textContent = 'Submitting...';

            const formData = new FormData(form);
            const data = Object.fromEntries(formData.entries());
            data.early_stage = formData.get('early_stage') === 'on';
            data.submitted_at = new Date().toISOString();

            // Collect selected areas (checkboxes)
            const selectedAreas = Array.from(document.querySelectorAll('input[name="areas"]:checked'))
                .map(cb => cb.value);
            data.areas = selectedAreas;
            delete data.areas; // Remove the single value from formData entries
            data.areas = selectedAreas; // Re-add as array

            // Add uploaded file ID if present
            if (uploadedFileId) {
                data.resume_file_id = uploadedFileId;
            }

            // Remove the file input from data (already uploaded)
            delete data.resume;

            // Validate: need at least one area selected
            if (selectedAreas.length === 0) {
                alert('Please select at least one area of interest.');
                submitBtn.disabled = false;
                submitBtn.textContent = 'Submit Profile';
                return;
            }

            // Validate: need either portfolio link or resume
            if (!data.portfolio && !uploadedFileId) {
                alert('Please provide either a portfolio link or upload a resume.');
                submitBtn.disabled = false;
                submitBtn.textContent = 'Submit Profile';
                return;
            }

            try {
                const response = await fetch(`${API_BASE}/api/apply`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

                if (response.ok) {
                    form.style.display = 'none';
                    document.querySelector('.form-intro').style.display = 'none';
                    successMessage.classList.add('show');
                } else {
                    throw new Error('Submission failed');
                }
            } catch (error) {
                alert('There was an error submitting your application. Please try again or email us directly.');
                submitBtn.disabled = false;
                submitBtn.textContent = 'Submit Profile';
            }
        });
    </script>
