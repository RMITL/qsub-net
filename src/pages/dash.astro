                <!-- Network Info -->
                <div class="card">
                    <div class="card-header">
                        <span class="card-title">Network</span>
                    </div>
                    <div class="wallet-info">
                        <div class="wallet-row">
                            <span class="wallet-label">Subnet</span>
                            <span class="wallet-value" id="net-subnet">--</span>
                        </div>
                        <div class="wallet-row">
                            <span class="wallet-label">Validators</span>
                            <span class="wallet-value" id="net-validators">--</span>
                        </div>
                        <div class="wallet-row">
                            <span class="wallet-label">Miners</span>
