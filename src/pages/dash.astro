    <div class="connection-status connecting" id="connection-status">
        <div class="dot"></div>
        <span>Connecting...</span>
    </div>

    <script>
        const API_BASE = '';
        let ws = null;
        let reconnectAttempts = 0;
        let currentData = null;

        function updateConnectionStatus(status) {
            const el = document.getElementById('connection-status');
            el.className = 'connection-status ' + status;
            if (status === 'connected') {
                el.innerHTML = '<div class="dot"></div><span>Connected</span>';
            } else if (status === 'disconnected') {
                el.innerHTML = '<div class="dot"></div><span>Disconnected</span>';
            } else {
                el.innerHTML = '<div class="dot"></div><span>Connecting...</span>';
            }
        }

        function connectWebSocket() {
            updateConnectionStatus('connecting');
            const protocol = window.location.protocol === 'https:' ? 'wss:' : 'ws:';
            ws = new WebSocket(`${protocol}//${window.location.host}/ws/dash`);

            ws.onopen = () => {
                reconnectAttempts = 0;
                updateConnectionStatus('connected');
                ws.send(JSON.stringify({type: 'subscribe'}));
            };

            ws.onmessage = (event) => {
                const data = JSON.parse(event.data);
                currentData = data;
                updateDashboard(data);
            };

            ws.onclose = () => {
                updateConnectionStatus('disconnected');
                if (reconnectAttempts < 10) {
                    reconnectAttempts++;
                    setTimeout(connectWebSocket, 2000 * reconnectAttempts);
                }
            };

            ws.onerror = () => {
                updateConnectionStatus('disconnected');
            };
        }

        function refreshData() {
            if (ws && ws.readyState === WebSocket.OPEN) {
                ws.send(JSON.stringify({type: 'refresh'}));
            } else {
                fetch('/api/dash/status').then(r => r.json()).then(data => {
                    currentData = data;
                    updateDashboard(data);
                }).catch(() => {
                    updateConnectionStatus('disconnected');
                });
            }
        }

        function formatStrategyName(name) {
            return name.replace(/_/g, ' ').replace(/\b\w/g, c => c.toUpperCase());
        }

        function getTierLabel(tier) {
            const labels = {
                'elite': 'Elite',
                'profitable': 'Profitable',
                'neutral': 'Neutral',
                'underperforming': 'Underperforming'
            };
            return labels[tier] || tier;
        }

        function updateDashboard(data) {
            document.getElementById('timestamp').textContent = new Date().toLocaleTimeString();

            // Network name
            document.getElementById('network-name').textContent =
                data.network === 'local' ? 'Localnet' :
                data.network === 'test' ? 'Testnet' : 'Mainnet';

            // Stats bar
            const onlineNodes = data.nodes ? data.nodes.filter(n => n.is_online).length : 0;
            const totalNodes = data.nodes ? data.nodes.length : 0;
            const healthPercent = totalNodes > 0 ? Math.round((onlineNodes / totalNodes) * 100) : 0;

            document.getElementById('stat-health').textContent = healthPercent + '%';
            document.getElementById('stat-nodes').textContent = `${onlineNodes}/${totalNodes}`;
            document.getElementById('stat-epoch').textContent = data.epoch || '--';
            document.getElementById('stat-balance').textContent = data.wallet ? data.wallet.total_tao.toFixed(2) : '--';
            document.getElementById('stat-signals').textContent = data.strategies ? data.strategies.length : '0';

            // Nodes badge
            const nodesBadge = document.getElementById('nodes-badge');
            if (onlineNodes === totalNodes && totalNodes > 0) {
                nodesBadge.textContent = 'Healthy';
                nodesBadge.className = 'card-badge badge-success';
            } else if (onlineNodes > 0) {
                nodesBadge.textContent = 'Degraded';
                nodesBadge.className = 'card-badge badge-warning';
            } else {
                nodesBadge.textContent = 'Offline';
                nodesBadge.className = 'card-badge badge-error';
            }

            // Nodes grid
            const nodesGrid = document.getElementById('nodes-grid');
            if (data.nodes && data.nodes.length > 0) {
                nodesGrid.innerHTML = data.nodes.map(node => `
                    <div class="node-card">
                        <div class="node-header">
                            <span class="node-name">${node.hostname || node.name}</span>
                            <span class="node-role ${node.role === 'validator' ? 'role-validator' : 'role-miner'}">${node.role}</span>
                        </div>
                        <div class="node-status">
                            <div class="status-dot ${node.is_online ? 'status-online' : 'status-offline'}"></div>
                            ${node.is_online ? 'Online' : 'Offline'} ${node.uptime ? '¬∑ ' + node.uptime : ''}
                        </div>
                        <div class="node-metrics">
                            <div class="node-metric">
                                <div class="node-metric-value">${node.cpu_usage !== null ? node.cpu_usage.toFixed(0) + '%' : '--'}</div>
                                <div class="node-metric-label">CPU</div>
                            </div>
                            <div class="node-metric">
                                <div class="node-metric-value">${node.memory_usage !== null ? node.memory_usage.toFixed(0) + '%' : '--'}</div>
                                <div class="node-metric-label">MEM</div>
                            </div>
                            <div class="node-metric">
                                <div class="node-metric-value">${node.disk_usage !== null ? node.disk_usage.toFixed(0) + '%' : '--'}</div>
                                <div class="node-metric-label">DISK</div>
                            </div>
                        </div>
                    </div>
                `).join('');
            } else {
                nodesGrid.innerHTML = '<div style="text-align: center; color: var(--text-muted); padding: 20px; grid-column: span 2;">No nodes configured</div>';
            }

            // Strategy Leaderboard
            const strategies = data.strategies || [];
            const winner = data.winner;
            const leaderboardBody = document.getElementById('leaderboard-body');

            if (strategies.length > 0) {
                // Update winner card
                const winnerCard = document.getElementById('winner-card');
                const winningStrategy = strategies.find(s => s.name === winner?.name) || strategies[0];

                if (winningStrategy) {
                    winnerCard.style.display = 'block';
                    document.getElementById('winner-name').textContent = formatStrategyName(winningStrategy.name);
                    document.getElementById('winner-quanta').textContent = winningStrategy.quanta_score.toFixed(2);
                    document.getElementById('winner-sharpe').textContent = winningStrategy.sharpe.toFixed(2);
                    document.getElementById('winner-return').textContent = (winningStrategy.return_pct >= 0 ? '+' : '') + winningStrategy.return_pct.toFixed(1) + '%';
                    document.getElementById('winner-drawdown').textContent = winningStrategy.drawdown_pct.toFixed(1) + '%';
                }

                // Render leaderboard rows
                // For now, assign UIDs based on strategy (strategy_miner = UID 4)
                const strategyUidMap = {
                    'momentum': 4, 'value': 4, 'diversified_10_stock': 4, 'sector_rotation': 4,
                    'cash_equity_50_50': 4, 'global_diversified': 4, 'leveraged_tqqq_tmf': 4,
                    'market_neutral': 4, 'spy_buy_hold': 4
                };

                leaderboardBody.innerHTML = strategies.map(s => {
                    const isWinner = s.name === winner?.name;
                    const rankClass = s.rank === 1 ? 'rank-1' : s.rank === 2 ? 'rank-2' : s.rank === 3 ? 'rank-3' : 'rank-other';
                    const returnClass = s.return_pct >= 0 ? 'positive' : 'negative';
                    const quantaClass = s.quanta_score >= 1 ? 'positive' : s.quanta_score >= 0 ? 'neutral' : 'negative';
                    const sharpeClass = s.sharpe >= 1 ? 'positive' : s.sharpe >= 0 ? 'neutral' : 'negative';
                    const uid = s.uid !== undefined ? s.uid : (strategyUidMap[s.name] || '--');

                    return `
                        <div class="leaderboard-row ${isWinner ? 'winner' : ''}">
                            <div class="rank-cell">
                                <div class="rank-badge ${rankClass}">${s.rank}</div>
                            </div>
                            <div class="strategy-cell">
                                <div class="strategy-name">${formatStrategyName(s.name)}</div>
                                <div class="strategy-meta">
                                    <span class="strategy-tier tier-${s.tier}">${getTierLabel(s.tier)}</span>
                                    <span class="strategy-uid">UID ${uid}</span>
                                </div>
                            </div>
                            <div class="uid-cell" data-label="UID">
                                <div class="uid-badge">${uid}</div>
                            </div>
                            <div class="metric-cell" data-label="QUANTA">
                                <div class="metric-value ${quantaClass}">${s.quanta_score.toFixed(2)}</div>
                            </div>
                            <div class="metric-cell" data-label="Sharpe">
                                <div class="metric-value ${sharpeClass}">${s.sharpe.toFixed(2)}</div>
                            </div>
                            <div class="metric-cell" data-label="Return">
                                <div class="metric-value ${returnClass}">${s.return_pct >= 0 ? '+' : ''}${s.return_pct.toFixed(1)}%</div>
                            </div>
                            <div class="metric-cell" data-label="Max DD">
                                <div class="metric-value negative">${s.drawdown_pct.toFixed(1)}%</div>
                            </div>
                        </div>
                    `;
                }).join('');
            } else {
                document.getElementById('winner-card').style.display = 'none';
                leaderboardBody.innerHTML = '<div style="text-align: center; color: var(--text-muted); padding: 20px;">No strategies running</div>';
            }

            // UID Grid
            const metagraph = data.metagraph || { uids: [] };
            const uidGrid = document.getElementById('uid-grid');
            document.getElementById('uid-count').textContent = `${metagraph.uids?.length || 0} UIDs`;

            if (metagraph.uids && metagraph.uids.length > 0) {
                uidGrid.innerHTML = metagraph.uids.map(u => {
                    const isActive = u.axon_port > 0;
                    const role = u.stake > 0 ? 'validator' : (u.axon_port > 0 ? 'miner' : (u.uid === 0 ? 'owner' : 'inactive'));
                    return `
                        <div class="uid-chip ${isActive ? 'active' : ''}">
                            <span class="uid-num">UID ${u.uid}</span>
                            <span class="uid-role ${role}">${role}</span>
                            ${isActive ? `<span style="font-size: 9px; color: var(--text-muted);">:${u.axon_port}</span>` : ''}
                        </div>
                    `;
                }).join('');
            } else {
                uidGrid.innerHTML = '<div style="text-align: center; color: var(--text-muted); padding: 10px; width: 100%;">No UIDs registered</div>';
            }

            // Epoch progress
            const epochProgress = data.epoch_progress || 0;
            document.getElementById('epoch-fill').style.width = epochProgress + '%';
            document.getElementById('epoch-time').textContent = data.epoch_remaining || '--';

            // Treasury
            if (data.treasury) {
                document.getElementById('treasury-tao').textContent = data.treasury.tao_pool.toFixed(2) + ' œÑ';
                document.getElementById('treasury-alpha').textContent = data.treasury.alpha_pool.toFixed(2) + ' Œ±';
                document.getElementById('treasury-rate').textContent = data.treasury.rate.toFixed(4) + ' œÑ/Œ±';
                document.getElementById('treasury-emission').textContent = data.treasury.emission.toFixed(4) + ' œÑ';
                document.getElementById('treasury-regcost').textContent = data.treasury.registration_cost.toFixed(4) + ' œÑ';
            }

            // Services
            const servicesGrid = document.getElementById('services-grid');
            if (data.services && Object.keys(data.services).length > 0) {
                servicesGrid.innerHTML = Object.entries(data.services).map(([name, info]) => `
                    <div class="service-item">
                        <div class="service-dot ${info.status === 'online' ? 'service-running' : 'service-stopped'}"></div>
                        <span class="service-name">${name}</span>
                        <span class="service-status">${info.status}</span>
                    </div>
                `).join('');
            } else {
                servicesGrid.innerHTML = '<div style="text-align: center; color: var(--text-muted); padding: 10px; grid-column: span 2;">No services</div>';
            }

            // Network info
            document.getElementById('net-subnet').textContent = data.netuid !== undefined ? `SN${data.netuid}` : '--';
            document.getElementById('net-validators').textContent = data.subnet?.validators_count || '0';
            document.getElementById('net-miners').textContent = data.subnet?.miners_count || '0';

            // Activity
            const activityList = document.getElementById('activity-list');
            if (data.activity && data.activity.length > 0) {
                activityList.innerHTML = data.activity.slice(0, 5).map(item => `
                    <div class="activity-item">
                        <div class="activity-left">
                            <div class="activity-icon ${item.type}">${item.type === 'commit' ? 'üìù' : item.type === 'reveal' ? '‚úì' : '‚≠ê'}</div>
                            <div>
                                <div class="activity-type">${item.title}</div>
                                <div class="activity-meta">${item.meta}</div>
                            </div>
                        </div>
                        <span class="activity-time">${item.time}</span>
                    </div>
                `).join('');
            } else {
                activityList.innerHTML = '<div style="text-align: center; color: var(--text-muted); padding: 20px;">No recent activity</div>';
            }
        }

        // Start
        connectWebSocket();
        setTimeout(refreshData, 1000);
        setInterval(refreshData, 30000);
    </script>
